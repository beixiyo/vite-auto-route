{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "./dist/typings",
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
}